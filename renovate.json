{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        ".github/workflows/swiftformat.yml"
      ],
      "matchStrings": [
        "SWIFTFORMAT_VERSION: (?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "ghcr.io/nicklockwood/swiftformat",
      "datasourceTemplate": "docker"
    }
  ]
}
